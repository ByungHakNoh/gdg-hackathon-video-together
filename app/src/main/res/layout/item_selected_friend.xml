<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/profileContainerCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profileIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_person_add_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        style="@style/AverageTextStyle"
        app:layout_constraintLeft_toLeftOf="@id/profileContainerCV"
        app:layout_constraintRight_toRightOf="@id/profileContainerCV"
        app:layout_constraintTop_toBottomOf="@id/profileContainerCV" />

    <ImageButton
        android:id="@+id/deleteBtn"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:background="@drawable/shape_circle_grey"
        android:button="@drawable/selector_check_box"
        android:src="@drawable/ic_baseline_clear_24"
        android:elevation="2dp"
        app:layout_constraintRight_toRightOf="@id/profileContainerCV"
        app:layout_constraintLeft_toRightOf="@id/profileContainerCV"
        app:layout_constraintTop_toTopOf="@id/profileContainerCV" />

</androidx.constraintlayout.widget.ConstraintLayout>